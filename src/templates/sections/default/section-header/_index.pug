mixin section-header(title, type, image, text, board, color)
  section.section&attributes(attributes)
    .container-fluid
      .container.container--gradient-alt
        .block
          h4.title= title
          .description
            each item in text
              p.text
                each subitem, s_index in item.list
                  if(item.index === s_index)
                    strong= subitem
                  else
                    span= subitem

        .pictures
          each item, index in image
            .image(class=(index === 0 ? 'image--lg' : 'image--sm'))
              +picture(item, `Product ${index}`)

          if (board)
            +board

        +icon(type)(class=`icon--${color}`)
