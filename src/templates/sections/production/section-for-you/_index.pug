mixin section-for-you(data, color)
  section.section&attributes(attributes)
    .container-fluid
      .container
        +category('Whatâ€™s in it for you')(class=`category--${color}`).js-item-animation
        .grid
          each item, index in data
            .item.js-item-animation
              .item__icon
                +picture(item.img, `Production ${index}`)
              hr.item__divider
              p.item__subtitle= item.subtitle

              if (item.text)
                p.item__text= item.text
