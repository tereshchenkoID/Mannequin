mixin section-integration
  section.section&attributes(attributes)
    .container-fluid
      .container
        .block
          +bullet(2, 'ecommerce integration').js-item-animation
          h2.title.js-item-animation Integration with your ecommerce store with API and Small JS snippet code
        .grid
          .grid__item.grid__item--lg.js-item-animation
            +picture('stylist/integration-1', 'Integration 1')
          .grid__item.grid__item--sm.grid__item--top.js-item-animation
            +picture('stylist/integration-2', 'Integration 2')
          .grid__item.grid__item--sm.grid__item--bottom.js-item-animation
            +picture('stylist/integration-3', 'Integration 3')
