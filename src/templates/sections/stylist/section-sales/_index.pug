mixin section-sales
  section.section&attributes(attributes)
    .container-fluid
      .container.container--gradient
        .block
          h2.title.js-item-animation Your customers are shopping for outfits, not items
          .grid
            .grid__column
              .layout
                .layout__column
                  .image.image--1.js-item-animation
                    +picture('stylist/sales-1', 'Sales 1')
                  .image.image--3.js-item-animation
                    +picture('stylist/sales-3', 'Sales 3')
                .layout__column
                  .image.image--2.js-item-animation
                    +picture('stylist/sales-2', 'Sales 2')
                  .image.image--4.js-item-animation
                    +picture('stylist/sales-4', 'Sales 4')
